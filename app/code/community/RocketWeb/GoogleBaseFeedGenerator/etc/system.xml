<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <rocketweb_tab>
            <label>Rocket Web Extensions</label>
            <sort_order>1005001</sort_order>
        </rocketweb_tab>
    </tabs>
    <sections>
        <rocketweb_googlebasefeedgenerator>
            <label>Rocket Shopping Feeds</label>
            <tab>rocketweb_tab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment><![CDATA[To configure your feed files, go to: <strong>Catalog > Rocket Shopping Feeds</strong><br/><br/>]]></comment>
                    <fields>
                        <microdata_turned_on translate="label">
                            <label>Automatic Updates (microdata)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Adds hidden schema.org microdata information to your product pages. For Google Shopping, you also need to enable Automatic Item Updates in your merchant account.]]></comment>
                        </microdata_turned_on>
                        <microdata_include_tax translate="label">
                            <label>Include tax in prices (microdata)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><microdata_turned_on>1</microdata_turned_on></depends>
                            <comment><![CDATA[Includes tax in the price and sales price in microdata output]]></comment>
                        </microdata_include_tax>
                        <microdata_condition_attribute translate="label">
                            <label>Select condition attribute (microdata)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>googlebasefeedgenerator/source_productattributescodes</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><microdata_turned_on>1</microdata_turned_on></depends>
                            <comment><![CDATA[Select attribute from which the product condition should be pulled (must have values new/used/refurbished). <br />If no attribute is selected, all products will be marked as 'new']]></comment>
                        </microdata_condition_attribute>
                    </fields>
                </general>
            </groups>
        </rocketweb_googlebasefeedgenerator>
    </sections>
</config>
